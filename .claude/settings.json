{
  "permission-mode": "plan",
  "description": "DevToolsKit Claude Code Configuration - Phase 3 Power User Complete",
  "project": {
    "name": "DevToolsKit",
    "version": "0.6.0",
    "type": "web-application",
    "stack": ["Parcel", "TypeScript", "Tailwind CSS", "Vitest", "Playwright"],
    "deployment": {
      "platform": "Vercel",
      "domain": "onlinedevtoolskit.com",
      "staging": "preview-deployments"
    }
  },
  "power-user-features": {
    "agents": {
      "enabled": true,
      "default-agents": ["tool-builder", "e2e-tester", "seo-optimizer", "docs-writer"],
      "auto-suggest": true
    },
    "commands": {
      "enabled": true,
      "project-commands": [
        "new-tool", 
        "test-complete", 
        "release-prep", 
        "update-analytics",
        "deploy-staging-mcp",
        "deploy-production",
        "performance-audit",
        "analytics-report",
        "test-mcp-integration"
      ],
      "quick-access": true,
      "mcp-enhanced": true
    },
    "plan-mode": {
      "default": true,
      "complex-requests": true,
      "architecture-analysis": true,
      "safe-exploration": true
    },
    "features": {
      "mcp-integrations": {
        "vercel": {
          "enabled": true,
          "capabilities": ["deployment", "performance-monitoring", "analytics"],
          "auto-connect": true
        },
        "github": {
          "enabled": true,
          "capabilities": ["repository-management", "issue-tracking", "release-management"],
          "auto-connect": true
        },
        "lighthouse-ci": {
          "enabled": true,
          "capabilities": ["performance-testing", "regression-detection"],
          "auto-connect": false
        }
      },
      "advanced-workflows": {
        "complete-deployment-pipeline": true,
        "performance-monitoring-pipeline": true,
        "emergency-hotfix-pipeline": true,
        "end-to-end-automation": true
      },
      "seo-optimization": true,
      "documentation-automation": true,
      "release-automation": true,
      "analytics-management": true,
      "documentation-enhancements": {
        "practical-examples": true,
        "workflow-guides": true,
        "english-translation": true,
        "organized-structure": true
      }
    }
  },
  "development": {
    "git-flow": true,
    "branch-protection": true,
    "testing-required": true,
    "ci-cd": "github-actions"
  },
  "quality-standards": {
    "lighthouse-score": ">95",
    "test-coverage": ">80%",
    "typescript-strict": true,
    "responsive-design": true,
    "accessibility": "WCAG-2.1"
  },
  "analytics": {
    "google-analytics": "G-G8CSCGH4HS",
    "core-web-vitals": true,
    "performance-monitoring": true,
    "automated-reporting": true,
    "mcp-integration": true
  },
  "automation-features": {
    "development-velocity": "3-4x faster",
    "automated-testing": "100% coverage",
    "zero-touch-deployments": true,
    "predictive-monitoring": true,
    "intelligent-quality-gates": true
  },
  "phase-status": {
    "current-phase": "Phase 3 Complete",
    "implementation-date": "2025-09-12",
    "next-phase": "Phase 4 - Mastery & Innovation",
    "power-user-level": "Expert"
  }
}